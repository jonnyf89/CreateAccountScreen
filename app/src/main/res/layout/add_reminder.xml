<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addReminderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addReminderLabelText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reminderTitleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addReminderLabel"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Reminder Title"
        />

    <TextView
        android:id="@+id/reminderDateField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminderTitleField"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reminderTimeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminderDateField"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/reminderDescriptionField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminderTimeField"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/familyMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminderDescriptionField"
        android:layout_marginStart="6dp"
        android:layout_marginTop="11dp"
        android:text="@string/familyMembersLabelTest"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/familyMembersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/familyMembersLabel"
        android:layout_centerVertical="true">

    </ListView>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/familyMembersList"
        android:text="@string/btnCreateText" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreate"
        android:text="@string/btnCancelText" />

</RelativeLayout>